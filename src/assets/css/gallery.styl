.vertical-gallery
    width 1040px
    margin 0 auto
    .photo-thumb
        animation fadein 500ms
        display inline-block
        margin 5px
        width 250px
        cursor pointer
        .image
            width 250px
            opacity 0.7
            transition opacity 200ms
            img
                width 250px

        &:hover .image
            opacity 1

        .title
            padding 10px
            padding-bottom 20px
            background-color #000
            color #fff
            margin-top -1px

@keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}
