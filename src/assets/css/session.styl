.form-default
    &.login
        margin-top 15%
    &.register
        margin-top 50px
        h5
            text-align center
    &.login, &.register
        box-shadow 20px 20px darken($light-blue, 50%)
        border 2px solid #fff

    .preview.avatar
        text-align center
        margin 10px auto 20px auto
        img
            width 170px
            height 170px
            object-fit cover
            border-radius 50%

    .dropzone
        margin 10px auto
        width 170px
        height 170px

.session-overlay
    text-align center
    margin-top 20%
    div
        display inline-block
        vertical-align middle
    .spinner
        font-size 4px
        margin 0 3em
    :not(.spinner)
        color #777
        font-size 18pt
